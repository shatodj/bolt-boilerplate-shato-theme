{% extends "record.twig" %}
{% import "twig/partials/_macros.twig" as m %}

{% block stylesheet %}
    {# Defer loading of non-critical styles #}
    {{ m.stylesheet('dist/css/page-bundle.css') }}
{% endblock %}

{% block scripts %}
    {{ m.script('dist/js/page-bundle.js') }}
{% endblock %}

{% block body %}
    <section class="section">
        <div class="container content">
            {% with { 'record': record, 'extended': false, 'repeaters': false, 'blocks': false, 'media': false } %}
            {{ block('sub_fields', 'helpers/_fields.twig') }}
            {% endwith %} 
        </div>
    </section>
{% endblock %}

{# Standard SECTIONS #}
{% block sections %}
    {{ m.sectionsByRecord(record, false, ['light', 'dark']) }}
    {{ m.sectionsByGroup("page", false, ['primary', 'light']) }}
{% endblock %}

