{# Entry block #}
{# Content of contentype 'block' and 'contentlink' filed for NOT iterable content #}
	{% block contentlink_block %}

		{% if content|default is empty %}
            {{ __("No Content") }}
		{% else %}

			{% set titleClass = "title is-5" %}
			<div class="{{ theme.layout.class.contentblock_content|default() }}"> 
				{% block beforetitle %}{% endblock %}
				{% block title %}
					{% apply spaceless %}
						<a href="{{ content.link() }}">
							{% if content.title is defined %}
								<h3 class="{{ titleClass }}">
									{{ content.title }}</h3>
							{% elseif entry.header is defined %}
								<h3 class="{{ titleClass }}">{{ content.header }}</h3>
							{% elseif content.name is defined %}
								<h3 class="{{ titleClass }}">{{ content.name }}</h3>
							{% endif %}
						</a>
					{% endapply %}
				{% endblock %}

				{% block beforeteaser %}{% endblock %}
				{% block teaser %}
					<div class="content">
						<p class="no-link-color">
							<a href="{{ content.link() }}">
								{% apply spaceless %}
									{% if content.teaser is defined %}
										{{ content.teaser|excerpt(220) }}
									{% elseif content.content is defined %}
										{{ content.content|excerpt(220) }}
									{% endif %}
								{% endapply %}
							</a>
						</p>
					</div>
				{% endblock %}
				{% block body %}{% endblock %}
				{% block beforeactions %}{% endblock %}
				{% block actions %}
					<div class="actions">
						{% set viewAlllink = content.link() %}
						<a class="button" href="{{ viewAlllink }}">{{ __('Read more') }}</a>
					</div>
				{% endblock %}
			</div>
	{% endif %}
{% endblock %}
